{
  "name": "pizzeria-es2015",
  "version": "1.0.0",
  "description": "playing around with es2015",
  "main": "index.html",
  "dependencies": {
    "babel-core": "^6.2.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "copyfiles": "^0.2.1",
    "minifyify": "^7.3.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.5.1",
    "rimraf": "^2.5.2"
  },
  "scripts": {
    "clean": "rimraf dist/ && mkdirp dist",
    "copy": "npm-run-all copy:*",
      "copy:images": "copyfiles images/**/*.* dist",
      "copy:fonts": "copyfiles fonts/**/*.* dist",
    "browserify": "browserify src/app.js -o dist/app.js  -d -t [ babelify ]",
    "dist": "npm-run-all clean copy browserify"
  },
  "author": "Deyan Yanakiev",
  "license": "MIT"
}
